#!/bin/bash

dmesg -n 7
echo 1 > /proc/sys/kernel/sysrq

echo "mount logfs"
LOGDIR=/var/log/datera
mkdir -p $LOGDIR
mount -t 9p -o trans=virtio logfs /var/log/datera

echo 1 > /proc/sys/fs/suid_dumpable
echo "| /usr/bin/cat - > $LOGDIR/core.%e.PID%p.SIG%s.TIME%t" > /proc/sys/kernel/core_pattern
ulimit -c unlimited
