#!/bin/bash

require-lib bcache-test-libs.sh

config-cache 2G
config-tier 4G
config-bucket-size 32k
config-block-size 4k
config-volume 1600M
config-mem 512M
config-cpus 1

nr_iterations=$((($ktest_priority + 1) * 5))
config-timeout $(($nr_iterations * 60))

main()
{
    setup_tracing 64 'bcache:*'

    if [ $NR_REBOOTS = 0 ]; then
	setup_bcache
	setup_fs
    else
	existing_bcache
	existing_fs
    fi

    [ $NR_REBOOTS = $nr_iterations ] && exit 0

    test_sysfs

    test_shrink &
    test_fault &
    test_sync &
    test_drop_caches &

    test_dbench &
    test_bonnie &

    sleep 30
    do_reboot
}
