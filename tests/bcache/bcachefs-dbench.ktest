#!/bin/bash

require-lib ../test-libs.sh

config-scratch-devs 2G
config-mem 512M

nr_iterations=$((($ktest_priority + 1) * 5))
config-timeout $(($nr_iterations * 60))

main()
{
    SIZE=small
    FS=bcachefs
    FLAGS="--bucket 64k --block 2k --discard --writeback --cache_replacement_policy=lru"
    CACHE="/dev/vda"
    BDEV=
    TIER=

    setup_tracing 64 'bcache:*'

    if [ $NR_REBOOTS = 0 ]; then
	setup_bcache
    else
	existing_bcache
    fi

    test_sysfs

    test_shrink &
    test_fault &
    test_sync &
    test_drop_caches &

    setup_fs

    [ "$NR_REBOOTS" != "$nr_iterations" ] && (sleep 10; do_reboot) &

    test_dbench

    if [ "$NR_REBOOTS" != "$nr_iterations" ]; then
	# Make sure we reboot and don't just exit
	while true; do
	    sleep 1000
	done
    fi
}
