#done
#sleep 0.5

#mkdir /sys/kernel/config/extent_client/foo
#ln -s /sys/kernel/config/extent_client/foo /root/f
#cd /sys/kernel/config/extent_client/foo
#
#for i in `seq 0 5`; do
#       mkdir servers/tcp:127.0.0.1:$((31337 + $i))
#done
#
#echo "Connecting"
#mkdir luns/$INODE_UUID

udevadm settle
DEV="extent_client0"

