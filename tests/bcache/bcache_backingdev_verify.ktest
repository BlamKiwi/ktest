#!/bin/bash

require-lib bcache-test-libs.sh

config-cache 512M
config-backing 512M,512M
config-bucket-size 64k
config-block-size 4k
config-writeback

config-timeout $(stress_timeout)

main()
{
    setup_tracing 'bcache:*'

    setup_bcache

    for bdev in /sys/fs/bcache/*/bdev*; do
	if [ ! -f $bdev/verify ]; then
	    exit 0
	fi
	echo 1 > $bdev/verify
    done

    test_antagonist
    test_stress
    stop_bcache
}
