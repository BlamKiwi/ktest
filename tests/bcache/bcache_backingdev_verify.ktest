#!/bin/bash

require-lib bcache-test-libs.sh

config-cache 512M
config-backing 512M,512M
config-bucket-size 64k
config-block-size 4k
config-writeback

config-timeout $(stress_timeout)

main()
{
    setup_tracing 'bcache:*'

    setup_bcache

    for flag in /sys/fs/bcache/*/bdev*/verify; do
	echo 1 > $flag
    done

    test_antagonist
    test_stress
    stop_bcache
}
