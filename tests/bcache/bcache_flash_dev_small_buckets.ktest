#!/bin/bash

require-lib ../test-libs.sh

config-scratch-devs 2G
config-mem 512M

config-timeout 600

main()
{
    SIZE=small
    FS=ext4
    FLAGS="--bucket 8k --block 4k --discard --cache_replacement_policy=lru"
    CACHE="/dev/vda"
    BDEV=
    TIER=

    setup_tracing 64 'bcache:*'

    setup_bcache
    setup_flash_volume 1400M
    test_stress
    stop_bcache
}
