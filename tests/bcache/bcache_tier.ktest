#!/bin/bash

require-lib ../test-libs.sh

config-scratch-devs 512M,2G
config-mem 512M

config-timeout 1200

main()
{
    SIZE=small
    FS=ext4
    FLAGS="--bucket 64k --block 4k --discard --writeback --cache_replacement_policy=lru"
    CACHE="/dev/vda"
    BDEV=
    TIER="/dev/vdb"
    VOLUME=1600M

    setup_tracing 64 'bcache:*'

    setup_bcache
    test_stress
    stop_bcache
}
