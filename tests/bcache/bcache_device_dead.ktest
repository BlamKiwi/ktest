#!/bin/bash

require-lib bcache-test-libs.sh

require-kernel-config BLK_DEV_MD,MD_FAULTY

config-cache 512M
config-tier 2G

config-bucket-size 64k
config-block-size 4k
config-volume 1400M

config-timeout $(stress_timeout)

main()
{
    setup_tracing 'bcache:*'

    mdadm -B /dev/md0 -lfaulty -n1 $TIER
    TIER=/dev/md0

    (
	sleep 10
	mdadm -G /dev/md0 -pwrite-all
	mdadm -G /dev/md0 -pread-persistent1
    )&

    setup_bcache
    echo readonly > /sys/fs/bcache/*/errors

    test_antagonist
    test_stress || true
    stop_volumes
    test_bcachefs_stress
    stop_bcache
}
