#!/bin/bash

require-lib ../test-libs.sh
require-kernel-config XFS_FS

config-scratch-devs 512M,2G,2G
config-mem 256M

config-timeout 1200

main()
{
    SIZE=small
    FS=xfs
    FLAGS="--bucket 64k --block 4k --discard --writeback --cache_replacement_policy=lru"
    CACHE="/dev/vda"
    BDEV="/dev/vdb /dev/vdc"
    TIER=

    setup_tracing 64 'bcache:*'

    setup_bcache
    test_stress
    stop_bcache
}
