#!/bin/bash

require-lib bcache-test-libs.sh

config-cache 512M
config-bucket-size 64k
config-block-size 4k

config-volume 1400M

config-timeout $(stress_timeout)

main()
{
    setup_tracing 'bcache:*'

    setup_bcache
    test_antagonist

    # Should fail since volume is too big
    ! test_fio

    echo 300M > /sys/fs/bcache/*/volume0/size

    test_fio
    stop_bcache
}
