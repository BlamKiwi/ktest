#!/bin/bash

KERNEL=/usr/share/DateraContainer/kernel

start=`date +%s`

test="$1"
if [ "$srcdir" = "" ] ; then
   srcdir=`dirname $0`
   # if no srcdir is given assume that the directory where this script
   # is stored is the srcdir.
fi
set -e
dir=`expr "$test" : "$srcdir/\(.*\)"`
env
$srcdir/ktest run -w $dir.dir -K -b $KERNEL -k $KERNEL $srcdir/$test

duration=$((`date +%s` -  $start))

echo [$test] test finished at `date +%s` -- `date` after $duration seconds
exit 0
